   keywords = {Animal Physiology,Biological and Medical Physics,Biophysics,Environment,Environmental Health,Meteorology,Plant Physiology,general},
   month = {4},
   note = {Tamerius<br/>Quinn et al. (2014) a<br/>Quinn et al. (2017)},
   pages = {479-488},
