   pages = {e0000057},
   publisher = {Public Library of Science},
   title = {Towards improved understanding of cascading and interconnected risks from concurrent weather extremes: Analysis of historical heat and drought extreme events},
   volume = {1},
   url = {https://journals.plos.org/climate/article?id=10.1371/journal.pclm.0000057},
