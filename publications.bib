   doi = {10.1016/j.envint.2020.106151},
   issn = {18736750},
   journal = {Environment International},
   keywords = {Buildings,Chemicals,Dust,Flame retardants,Offices,Products},
   pages = {106151},
   pmid = {33092866},
   publisher = {Elsevier Ltd},
   title = {Impact of “healthier” materials interventions on dust concentrations of per- and polyfluoroalkyl substances, polybrominated diphenyl ethers, and organophosphate esters},
   volume = {150},
   url = {https://doi.org/10.1016/j.envint.2020.106151},
