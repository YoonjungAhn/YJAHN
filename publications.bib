   issn = {10960953},
   issue = {November 2018},
   journal = {Environmental Research},
   keywords = {Health adaptation strategy,Heat-health relationship,Heat-stress threshold,Wet-bulb globe temperature},
   pages = {282-292},
   pmid = {30599292},
   publisher = {Elsevier Inc.},
   title = {New approach to identifying proper thresholds for a heat warning system using health risk increments},
   volume = {170},
