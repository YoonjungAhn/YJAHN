   month = {10},
   pages = {525-530},
   publisher = {Elsevier},
   title = {Heatwave and infants' hospital admissions under different heatwave definitions},
   volume = {229},
   url = {https://www.sciencedirect.com/science/article/pii/S0269749117313921},
   year = {2017},
