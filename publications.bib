   issn = {18791026},
   journal = {Science of the Total Environment},
   keywords = {Acute exposures,Effect modification,End-stage renal disease,Extreme heat events,Hemodialysis,Interaction,Ozone,Particulate matter},
   pages = {152481},
   pmid = {34921874},
   publisher = {Elsevier B.V.},
   title = {Combined effects of air pollution and extreme heat events among ESKD patients within the Northeastern United States},
