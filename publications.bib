   issn = {0048-9697},
   journal = {Science of The Total Environment},
   keywords = {Ambient temperature,High temperature,Injury,Intentions of injury,Low temperature,Mechanisms of injury},
   month = {12},
   pages = {141261},
   pmid = {32745866},
   publisher = {Elsevier},
   title = {Association between ambient temperature and injury by intentions and mechanisms: A case-crossover design with a distributed lag nonlinear model},
   volume = {746},
   year = {2020},
}
