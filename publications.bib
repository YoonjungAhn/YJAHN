   journal = {BMC Medical Research Methodology},
   keywords = {Conditional distributions,Environment,Poisson regression,Statistics,Time series regression},
   pages = {1-6},
   title = {Conditional Poisson models: A flexible alternative to conditional logistic case cross-over analysis},
   volume = {14},
