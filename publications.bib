   doi = {10.1016/J.ENVINT.2019.104909},
   issn = {0160-4120},
   journal = {Environment International},
   keywords = {Ensemble model,Fine particulate matter (PM2.5),Gradient boosting,Neural network,Random forest},
   month = {9},
   pages = {104909},
