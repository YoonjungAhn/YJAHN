   issue = {7},
   journal = {GeoHealth},
   month = {7},
   pages = {212-223},
   publisher = {John Wiley and Sons Inc},
   title = {Heat, Disparities, and Health Outcomes in San Diego County’s Diverse Climate Zones},
   volume = {2},
   year = {2018},
}
