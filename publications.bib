   keywords = {Climate,Data set,Ecoregions,Extremes,Gridded,Resolution,Weather},
   pages = {1338-1351},
   pmid = {27755764},
   title = {Evaluation of downscaled, gridded climate data for the conterminous United States},
   volume = {26},
   year = {2016},
